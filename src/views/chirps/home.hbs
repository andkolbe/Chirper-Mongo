{{#each chirps}}
<div class="card my-2 shadow">
    <a href="/chirps/{{_id}}"></a>
    <div class="card-body">
        <div class='d-flex align-items-center mb-4'>
            <img class='rounded-circle me-3' src="{{user.image}}" alt="">
            <h5 class="card-title">{{user.displayName}}</h5>
        </div>
        <p clase="card-text">{{content}}</p>
        <div class="d-flex align-items-center justify-content-between">
            <h6 class="card-text">Location: {{location}}</h6>
        <small class="card-text text-secondary">{{formatDate createdAt 'h:mm a - MMMM Do YYYY'}}</small>
        </div>
    </div>
</div>
{{/each}}