{
    "compilerOptions": {
      "module": "commonjs", // specifies the module code generation method. Node uses commonjs
      "esModuleInterop": true,
      "target": "es6", // specifies the output language level
      // "moduleResolution": "node", // helps the compliler figure out what an import refers to. The value nodew mimics the Node module resolution mechanism
      "sourceMap": true,
      "outDir": "./dist", // Where we want our compiled javascript to go
      "rootDir": "./src" // Where our typescript files are stored
    },
    "lib": ["es2015"]
  }